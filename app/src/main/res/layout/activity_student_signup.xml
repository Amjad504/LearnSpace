<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Student_Signup">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <!--        <de.hdodenhof.circleimageview.CircleImageView-->
        <!--            android:id="@+id/topDp"-->
        <!--            android:layout_width="170dp"-->
        <!--            android:layout_height="170dp"-->
        <!--            android:src="@drawable/mainlogo"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Congratulations, student!\nYour quest for knowledge starts here\nLet's dive in!"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/black_90"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="15dp"
                android:text="Your Name"
                android:textStyle="bold"
                android:textColor="@color/black_90"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/reg_student_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_bg"
                android:ems="10"
                android:hint="Enter your Name"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textColor="#FFFFFF"
                android:textColorHint="@color/white_dim"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="15dp"
                android:text="Your Speciality"
                android:textStyle="bold"
                android:textColor="@color/black_90"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/reg_student_speciality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_bg"
                android:ems="10"
                android:hint="Enter your speciality"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textColor="#FFFFFF"
                android:textColorHint="@color/white_dim"
                android:textSize="20dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="15dp"
                android:text="Your Details"
                android:textStyle="bold"
                android:textColor="@color/black_90"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/reg_student_details"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_bg"
                android:ems="10"
                android:hint="Tell us about yourself"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="#FFFFFF"
                android:textColorHint="@color/white_dim"
                android:textSize="20dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                android:text="Select your Gender: "
                android:textColor="@color/black"
                android:textSize="20sp" />


            <RadioGroup
                android:id="@+id/gender_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center">



                        <RadioButton
                            android:id="@+id/Male"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/custom_radio"
                            android:button="@android:color/transparent"
                            />

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/male_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/black"
                            tools:ignore="SmallSp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginStart="50dp"

                        android:gravity="center">



                        <RadioButton
                            android:id="@+id/Female"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/custom_radio"
                            android:button="@android:color/transparent"
                            />

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/female_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/black"
                            tools:ignore="SmallSp" />

                    </RelativeLayout>

                </LinearLayout>
            </RadioGroup>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/reg_student_signup"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_light_back"
                android:gravity="center"
                android:hint="Start Now"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColorHint="@color/white"
                android:textSize="25dp" />



        </LinearLayout>

    </LinearLayout>

</RelativeLayout>